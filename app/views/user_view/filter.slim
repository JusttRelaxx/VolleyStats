-filter_name = @filter_name
-stylesheet "filter"


=render partial: "filter_#{filter_name}"
button.navbar-btn.btn-primary.btn onclick="filter()"
  |Филтрирай
#results        




javascript:
  function filter(){
    var data = getData();
      $.post('/view/filtered', {filter:"#{filter_name}", data:data}).then(function (response) {
          $(results).empty();
          $(results).append($(response));
        });
    }